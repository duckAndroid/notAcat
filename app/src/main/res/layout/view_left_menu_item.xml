<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/left_item_card"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/left_menu_selector"
        app:cardBackgroundColor="@color/cardview_shadow_end_color"
        app:contentPadding="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/left_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/ic_menu_manage"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:padding="3dp"
                android:text="工具箱"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/left_item_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/left_item_title"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/tip_number"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
